{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://liestudio/schemas/atb_get_topology_request.json",
  "title": "Get topology",
  "description": "Retrieve structure topology files from the ATB server by molid",
  "type": "object",
  "properties": {
    "atb_api_token": {
      "type": "string",
      "description": "ATB server API token required for communication"
    },
    "molid": {
      "type": "integer",
      "description": "ATB molecule ID"
    },
    "ffversion": {
      "type": "string",
      "description": "ATB supported forcefield version",
      "default": "54A7",
      "enum": ["53A6", "54A7"]
    },
    "fformat": {
      "type": "string",
      "description": "ATB supported file format",
      "default": "rtp_allatom"
    },
    "atb_hash": {
      "type": "string",
      "description": "ATB server hash version",
      "default": "HEAD"
    },
    "workdir": {
      "type": "string"
    }
  },
  "required": ["atb_api_token", "molid"]
}